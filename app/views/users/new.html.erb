<% provide(:title, 'Create member') %>
<h1>Create member</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :birthday %>
      <%= f.date_field :birthday %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :team %>
      <%= f.collection_select(:team, Team.all, :id, :name, prompt: "Select please") %>

      <%= f.label :position %>
      <%= f.collection_select(:position, Position.all, :id, :name, prompt: "Select please") %>

      <%= f.label :user_project, "Projects joined" %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create member", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
